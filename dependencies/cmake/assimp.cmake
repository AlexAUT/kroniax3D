ExternalProject_Add(Assimp_Debug_Shared
  SOURCE_DIR ${CMAKE_CURRENT_SOURCE_DIR}/source/assimp
  #DOWNLOAD_COMMAND ""
  GIT_REPOSITORY "https://github.com/alexaut/assimp"
  GIT_TAG "7b9a14020af944d740c59b5753901d5bdf6fb865"
  UPDATE_COMMAND ""
  CMAKE_ARGS -DCMAKE_BUILD_TYPE=Debug
             -DBUILD_SHARED_LIBS=ON
             -DASSIMP_BUILD_ASSIMP_TOOLS=OFF
             -DASSIMP_BUILD_TESTS=OFF
             -DCMAKE_INSTALL_PREFIX=${CMAKE_CURRENT_SOURCE_DIR}/bin/${CMAKE_SYSTEM_NAME}
             -DCMAKE_TOOLCHAIN_FILE=${CMAKE_TOOLCHAIN_FILE}
             ${OS_ARGS}
)

